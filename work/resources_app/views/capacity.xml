<?xml version="1.0"?>

<odoo>
    <record id="view_resources_capacity_form" model="ir.ui.view">
        <field name="name">resources.capacity.form</field>
        <field name="model">resources.capacity</field>
        <field name="arch" type="xml">
            <form string="Capacity">
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Resource Name"/>
                            </h1>
                            <h2>
                                <field name="home_partner_institution" />
                            </h2>
                        </div>
                        <div class="oe_avatar">
                            <field name="image" widget="image" options="{'size': (200, 200)}"/>
                        </div>
                    </group>
                    <group>
                        <field name="description" placeholder="Description"/>
                        <field name="keywords" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
