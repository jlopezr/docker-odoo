<odoo>
    <template id="resource_web_template" name="Resource List">
        <t t-call="website.layout">
            <t t-set="title">Resources</t>
            <div id="wrap" class="container">
                <h1>Resources Web</h1>
                <div class="row">
                    <t t-foreach="resource" t-as="res">
                        <div class="thumbnail" style="width: 100%; background-color: #f2f2f2; margin-bottom: 20px; border: 1px solid #ccc">
                            <div class="caption">
                                <p><strong>Name: </strong> <span t-field="res.name"/></p>
                                <p><strong>Description: </strong> <span t-field="res.description"/></p>
                                <p><strong>Equipment: </strong> <span t-field="res.equipment"/></p>
                                <p><strong>Keywords: </strong><span t-foreach="res.keywords" t-as="keyword"><t t-esc="keyword.name"/><t t-if="not keyword==res.keywords[-1]">,</t></span></p>
                                <p><strong>Technical Staff: </strong><t t-esc="res.technical_staff"/></p>
                                <p><strong>Booking System: </strong><t t-esc="res.booking_system"/></p>
                                <p><strong>Remote Access Policy: </strong><t t-esc="res.remote_access_policy"/></p>
                                <p><strong>Contact Person(s): </strong></p>
                                <table class="table table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Phone</th>
                                            <th>Email</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="res.contact_person" t-as="person">
                                            <tr>
                                                <td><t t-esc="person.name"/></td>
                                                <td><t t-esc="person.phone"/></td>
                                                <td><t t-esc="person.email"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>